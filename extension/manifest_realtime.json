{
  "manifest_version": 3,
  "name": "MalwareSnipper - Real-Time Threat Detection",
  "version": "2.0.0",
  "description": "Real-time malware detection with instant status updates",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "http://localhost/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background_realtime.js"
  },
  "action": {
    "default_popup": "popup_realtime.html",
    "default_title": "MalwareSnipper - Scan Current Page"
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
